<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_history_transaction"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/space_double"
    android:layout_margin="@dimen/space"
    android:padding="@dimen/space"
    android:background="@drawable/category_background"
    android:clipToPadding="false"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/transaction_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:text="Tanggal Transaksi"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="120dp"
            app:cardCornerRadius="4dp"
            android:id="@+id/containerProduct">

            <ImageView
                android:id="@+id/transactionBackground"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:background="@drawable/product_backgorund" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/space_double"
            android:orientation="vertical">

            <TextView
                android:id="@+id/transactionTitle"
                android:layout_marginVertical="@dimen/space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Nama Produk"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                >
                <TableRow>
                    <TextView
                        android:id="@+id/transactionPriceHistory"

                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Rp 20.000"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/statusTransactionLabel"
                        android:layout_marginStart="30sp"
                        android:layout_gravity="center_horizontal"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Status"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/transactionTotalLabel"
                        android:text="Total belanja"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/statusTransaction"
                        android:layout_marginStart="30sp"
                        android:layout_gravity="center_horizontal"
                        android:text="Sedang Dikirim"/>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableRow>
                    <TextView
                        android:text="Rp."/>
                    <TextView
                        android:id="@+id/transactionTotal"
                        android:paddingLeft="2sp"
                        android:text="60.000"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_gravity="left"
                        />
                    <TextView
                        android:id="@+id/transactionQuantityHistory"
                        android:paddingLeft="5sp"
                        android:text="(2 pcs)"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        />
                </TableRow>

            </TableLayout>


        </LinearLayout>

    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_column="0"
                android:id="@+id/invoiceTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INVOICE"/>


        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/imgCourier"
        android:layout_width="50dp"
        android:layout_height="17dp"
        android:layout_column="1"
        android:layout_gravity="center_vertical|left"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/courier_image"
        android:scaleType="centerCrop" />
</LinearLayout>