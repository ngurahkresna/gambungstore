<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckoutForm">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Checkout"
                    android:textAlignment="center"
                    android:textColor="@color/colorFont"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/formLogo"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/form" />

                    <ImageView
                        android:id="@+id/paymentLogo"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="100dp"
                        android:src="@drawable/card"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/doneLogo"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="100dp"
                        android:src="@drawable/done"
                        android:visibility="visible" />
                </LinearLayout>

                <TextView
                    android:id="@+id/subTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo"
                    android:layout_marginTop="25dp"
                    android:text="Bukti Pembayaran Berhasil di Upload"
                    android:textAlignment="center"
                    android:textColor="@color/colorFont"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:id="@+id/priceDetailField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subTitle"
                    android:layout_marginTop="20dp"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/tips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/listBtm"
                        android:text="Tata Cara Pembayaran"
                        android:textColor="@color/colorFont"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/bodyTips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tips"
                        android:layout_marginBottom="15dp"
                        android:text="Silahkan melakukan transaksi sesuai dengan waktu yang sudah ditentukan, jika melebihi waktu maka akan dibatalkan secara otomatis oleh sistem" />

                    <LinearLayout
                        android:id="@+id/detailPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bodyTips"
                        android:background="@drawable/stroke_list"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sisa Waktu Bayar"
                            android:textAlignment="center"
                            android:textColor="@color/colorFont"
                            android:textSize="16sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:text="00 : 59 : 59"
                            android:textAlignment="center"
                            android:textColor="@color/colorAccent"
                            android:textSize="24sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jam  Menit  Detik"
                            android:textAlignment="center"
                            android:textColor="@color/colorFont"
                            android:textSize="16sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="No Rekening"
                            android:textAlignment="center"
                            android:textColor="@color/colorFont"
                            android:textSize="16sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="0086197911100"
                            android:textAlignment="center"
                            android:textColor="@color/colorFont"
                            android:textSize="18sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sisa Waktu Bayar"
                            android:textAlignment="center"
                            android:textColor="@color/colorFont"
                            android:textSize="16sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="a/n"
                            android:textAlignment="center"
                            android:textColor="@color/colorFont"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Bumdes Pakis Sabilulungan"
                            android:textAlignment="center"
                            android:textColor="@color/colorFont"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/systemMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detailPayment"
                        android:layout_marginTop="10dp"
                        android:text="Transaksi anda sedang diproses, untuk mempercepat proses verifikasi anda dapat mengupload bukti pembayaran dan tunggu hingga proses berhasil."
                        android:textColor="@color/colorFont"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/upload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/systemMessage"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pilih Metode Pembayaran"
                            android:textColor="@color/colorFont"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_width="108dp"
                                android:layout_height="35dp"
                                android:background="@drawable/button_primary_solid"
                                android:gravity="end"
                                android:onClick="paymentMethod"
                                android:padding="8dp"
                                android:text="Upload"
                                android:textAlignment="center"
                                android:textAllCaps="false"
                                android:textColor="@color/colorWhite" />
                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/jiCashDone"
                    android:layout_below="@+id/subTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="20dp">
                    
                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:src="@drawable/big_done"/>
                    
                </RelativeLayout>


                <TextView
                    android:id="@+id/message"
                    android:layout_below="@id/jiCashDone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaksi Anda akan segera di proses, Terimakasih telah menggunakan aplikasi kami."
                    android:textAlignment="center"
                    android:textColor="@color/colorFont"
                    android:textSize="16sp"/>

                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@id/message"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/button_primary_solid"
                    android:padding="8dp"
                    android:text="Lihat Detail Transaksi"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@id/submitButton"
                    android:layout_marginTop="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp"
                    android:text="Kembali ke Home"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary" />

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>