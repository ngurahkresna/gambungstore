<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckoutPenarikanBuyerProses">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">
                <ImageView
                    android:id="@+id/backArrow"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:tint="@color/colorFont"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Penarikan Jicash"
                    android:textAlignment="center"
                    android:textColor="@color/colorFont"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:text="Berikut Waktu proses penarikan\npastikan data anda benar sebelum mengakhiri transaksi"
                    android:orientation="horizontal">
                </TextView>


                <TextView
                    android:id="@+id/subTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo"
                    android:layout_marginTop="25dp"
                    android:text="Penarikan"
                    android:textAlignment="center"
                    android:textColor="@color/colorFont"
                    android:textSize="18sp"
                    android:gravity="center_horizontal" />
                <View
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/subTitle"
                    android:layout_marginTop="15dp"
                    android:background="#3F895E" />

                <RelativeLayout
                    android:id="@+id/detil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/subTitle"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:id="@+id/detailPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sisa Waktu Proses"
                            android:textAlignment="center"
                            android:textColor="@color/colorFont"
                            android:textSize="16sp"
                            android:gravity="center_horizontal" />


                        <TextView
                            android:id="@+id/time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:text="23 : 59 : 59"
                            android:textAlignment="center"
                            android:textColor="@color/colorAccent"
                            android:textSize="24sp"
                            android:gravity="center_horizontal" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jam  Menit  Detik"
                            android:textAlignment="center"
                            android:textColor="@color/colorFont"
                            android:textSize="16sp"
                            android:gravity="center_horizontal" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="No Rekening"
                            android:textAlignment="center"
                            android:textColor="@color/colorFont"
                            android:textSize="16sp"
                            android:gravity="center_horizontal" />


                        <TextView
                            android:id="@+id/noreqValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/colorFont"
                            android:textSize="18sp"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Penyedia Jasa"
                            android:textAlignment="center"
                            android:textColor="@color/colorFont"
                            android:textSize="16sp"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="BJB / Bank Jabar"
                            android:textAlignment="center"
                            android:textColor="@color/colorFont"
                            android:textSize="16sp"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="a/n"
                            android:textAlignment="center"
                            android:textColor="@color/colorFont"
                            android:textSize="16sp"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Bumdes Pakis Sabilulungan"
                            android:textAlignment="center"
                            android:textColor="@color/colorFont"
                            android:textSize="18sp"
                            android:gravity="center_horizontal" />


                    </LinearLayout>

                    <Button
                        android:id="@+id/submitKonfirmasiPenarikan"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@id/detailPayment"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button_primary_solid"
                        android:padding="8dp"
                        android:text="Konfirmasi Penarikan Selesai"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:gravity="center_horizontal"
                        android:onClick="btnKonfirmasipenarikan"/>

                    <Button
                        android:id="@+id/backButtonPenarikan"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@id/submitKonfirmasiPenarikan"
                        android:layout_marginTop="16dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="8dp"
                        android:text="Kembali ke Home"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_horizontal"
                        android:onClick="btnHome"/>

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>