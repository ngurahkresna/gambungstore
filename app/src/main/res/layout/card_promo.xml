<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_double"
    android:layout_marginRight="@dimen/space_triple"
    android:layout_marginBottom="@dimen/space_triple"
    android:layout_marginLeft="@dimen/space_triple">

    <ImageView
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="160dp"
        android:padding="@dimen/space_triple"
        android:id="@+id/promoCard"
        android:background="@drawable/promo_background"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/promoTitle"
        android:layout_alignBottom="@+id/promoCard"
        android:text="test"
        android:layout_margin="@dimen/space_double"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textSize="16sp"/>

</RelativeLayout>