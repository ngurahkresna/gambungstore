<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/judul_laporan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penambahan Mesin Diesel"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/judul_laporan"
            android:layout_marginBottom="12dp">
            <androidx.cardview.widget.CardView
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:cardCornerRadius="250dp"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:id="@+id/cardfp">
                <ImageView
                    android:id="@+id/fp_penerima"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/user_penerima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toko Dede Yusuf"
                android:layout_toEndOf="@+id/cardfp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"/>
        </RelativeLayout>

    <TextView
        android:id="@+id/isi_donasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Membutuhkan dana untuk meningkatkan
produksi dengan menambah mesin produksi"
        android:layout_below="@+id/layout1"
        android:layout_marginBottom="12dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/isi_donasi">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout2"
            android:layout_marginBottom="4dp">
            <TextView
                android:id="@+id/kas_donasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kas Donasi: "
                android:layout_marginStart="32dp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/nominal_kas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 00"
                android:layout_marginEnd="32dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout3"
            android:layout_below="@id/layout2"
            android:layout_marginBottom="4dp">
            <TextView
                android:id="@+id/penarikan_donasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penarikan: "
                android:layout_marginStart="32dp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/nominal_penarikan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 00"
                android:layout_marginEnd="32dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cardview_dark_background"
            android:id="@+id/line"
            android:layout_below="@id/layout3"
            android:layout_marginBottom="4dp">
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout4"
            android:layout_below="@id/line">
            <TextView
                android:id="@+id/total_kas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Kas: "
                android:layout_marginStart="32dp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/nominal_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 00"
                android:layout_marginEnd="32dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>