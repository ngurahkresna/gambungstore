<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.gambungstore">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".jicashCheckoutDone"></activity>
        <activity android:name=".jicashCheckoutPayment" />
        <activity
            android:name=".jicashAlert"
            android:theme="@style/AppTheme.DialogPop" />
        <activity android:name=".JicashCheckoutForm" />
        <activity android:name=".TopUpJicash" />
        <activity android:name=".jiCashHomeActivity" />

        <activity android:name=".DetailStore"></activity>
        <activity android:name=".Chat" />
        <activity android:name=".detailProduct" />
        <activity android:name=".CheckoutDone" />
        <activity android:name=".CheckoutPayment" />
        <activity android:name=".CheckoutForm" />
        <activity android:name=".periodeActivity" />
        <activity android:name=".TampilanBeritaDonasi"></activity>
        <activity android:name=".TransferDonasi" />
        <activity android:name=".DetailDonasi" />
        <activity android:name=".MasukNominal" />
        <activity android:name=".MainDonasi" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.easyphotopicker.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true"
            tools:replace="android:authorities">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>
        <activity android:name=".detailPromo" />
        <activity android:name=".transaction" />
        <activity android:name=".editProfile" />
        <activity android:name=".changePasswordActivity" />
        <activity android:name=".wishlistActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".productActivity" />
        <activity android:name=".categoryActivity" />
        <activity android:name=".promoActivity" />
        <activity android:name=".register" />
        <activity android:name=".login" />
        <activity android:name=".authOption" />
        <activity android:name=".homeActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https" android:host="dev.gambungstore.id" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>